<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hoang.kaitea">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:alwaysRetainTaskState="true"
        android:exported="true"
        android:icon="@drawable/bestea"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bestea"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_noActionbar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ClockAcitivity">
        </activity>
        <activity android:name=".MissionActivity">
        </activity>
        <activity
            android:name=".TestActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".NoteActivity">
        </activity>
        <activity android:name=".ContactActivity">
        </activity>
        <activity android:name=".FormulationAcitivity">
        </activity>

        <receiver android:name=".data.AlarmReceiver"/>

        <activity
            android:name=".TimeUpActivity"
            android:theme="@style/AppTheme.Transparent">
        </activity>
        <activity
            android:name=".data.EditNoteActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ResultQuizActivity">
        </activity>
        <activity android:name=".ViewAnswerActivity">
        </activity>
    </application>

</manifest>